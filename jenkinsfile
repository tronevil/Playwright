pipeline {
   agent { docker { image 'mcr.microsoft.com/playwright:v1.51.1-noble' } }
   stages {
      stage('e2e-tests') {
         steps {
            sh 'npm ci'
            sh 'npx playwright test'
            script{
                doDynamicParallelTestSteps()
            }
         }
      }
   }
}
def doDynamicParallelTestSteps() {
publishHTML([
    allowMissing: false,
    alwaysLinkToLastBuild: true,
    keepAll: true,
    reportDir: 'playwright-report',
    reportFiles: "index${shardNum}.html",
    reportName: "shard ${shardNum}",
    reportTitles: "title ${shardNum}"
])
}
